flexColumnCenter()
  display flex
  flex-direction column
  align-items center

.mdl-layout__content
  flexColumnCenter()
  background #fafafa

.mdl-layout__drawer
  background white

hoverPointer()
  &:hover
    cursor pointer

.videoItem,
.noteItem
  display flex
  justify-content center
  .mdl-card
    hoverPointer()
    max-width 250px
    min-height 0
    .title
      word-break break-word
    .description
      height 36px
      width initial
      max-width 330px


.mdl-navigation__link
  hoverPointer()
  display flex !important
  align-items center
  &.selected
    background-color #e0e0e0
  .material-icons
    margin-right 32px


.note-content
  padding 40px
  #comments
    display flex !important
  .mdl-card
    padding 16px
    max-width 700px
    margin auto
    &.mdl-card
      width initial
    img
      display block
      margin auto
      padding-top 16px
      padding-bottom 16px
      max-width 100%
    h1
      text-align center
    pre
      overflow-x auto
      max-width 100%
    table
      margin 16px auto 32px auto
    blockquote
      font-size 16px
      margin-left 32px
      border-left 4px solid #CCC
      padding-left 8px
      p
        margin 0
      &:before,
      &:after
        content ''
        margin 0

.CodeMirror
  max-width 700px
  height 100%

iframe
  margin auto
  padding 16px


.login
  display flex
  flex-direction column
  flex 1
  justify-content center
  .mdl-card
    width 200px
    .login-form
      flexColumnCenter()
      padding 16px
      button
        margin 20px 0

.admin
  display flex
  flex-direction column
  flex 1
  justify-content center
  .mdl-card
    width 200px
    .mdl-card__title
      justify-content center
    .change-password-form
      flexColumnCenter()
      padding 0 16px 16px 16px
      button
        margin 20px 0


@media (max-width: 480px)
  .note-content
    padding 16px

  .videoItem,
  .noteItem
    .mdl-card
      .description
        display none
